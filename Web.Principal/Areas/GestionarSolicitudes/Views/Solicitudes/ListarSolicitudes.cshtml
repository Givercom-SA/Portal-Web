@model ViewModel.Datos.Solicitud.ListarSolicitudesParameterVM

@{
    ViewBag.Title = "Listado de Solicitudes de Acceso";
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>





<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="arrow-right-circle"></i></div>
                        Solicitudes de Acceso
                    </h1>
                    <div class="page-header-subtitle">Con esta opción usted podra revisar y atender solicitudes de acceso.</div>
                </div>
            </div>
        </div>
    </div>
</header>



<div class="container-xl px-4 mt-n10">

    <form asp-area="GestionarSolicitudes" asp-controller="Solicitudes" asp-action="ListarEncriptar" id="frmListarSolicitudes" method="get">


        <div class="card card-header-actions mb-4">
            <div class="card-header">
                Filtros para Busqueda
                <button class="btn btn-sm btn-primary" type="button" onclick="btnBuscar()">Buscar</button>
            </div>

            <div class="card-body">
                <div class="sbp-preview-content">
                    <div class="row gx-3">
                        <div class="col-md-3">
                            <label asp-for="@Model.FechaIngreso" class="small mb-1"></label>
                            <input class="form-control" id="txtFechaIngreso" asp-for="@Model.FechaIngreso" type="date" placeholder="Fecha de Ingreso" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="@Model.CampoCodSolicitud" class="small mb-1"></label>
                            <input class="form-control" asp-for="@Model.CampoCodSolicitud" type="text" placeholder="Ingresar Nro. de solicitud" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="@Model.CampoRuc" class="small mb-1"></label>
                            <input class="form-control" asp-for="@Model.CampoRuc" type="text" placeholder="Ingresar Ruc o Dni" />
                        </div>

                    </div>
                    <div class="row gx-3">
                        <div class="col-md-3">
                            <label asp-for="@Model.CampoRazonSocial" class="small mb-1"></label>
                            <input class="form-control" asp-for="@Model.CampoRazonSocial" type="text" placeholder="Ingresar Razón Social" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="@Model.NombreContacto" class="small mb-1"></label>
                            <input class="form-control" asp-for="@Model.NombreContacto" type="text" placeholder="Ingresar Nombre de Contacto" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="@Model.CodEstado" class="small mb-1"></label>
                            <select asp-for="@Model.CodEstado" id="ddlEmpresa"
                                    asp-items="@ViewBag.ListarEstado"
                                    class="form-select small">
                                <option value="0">Todos</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-header-actions mb-4">
            <div class="card-header ">
                Registros Encontrados

            </div>
            <div class="card-body">
                <!-- Billing history table-->
                <div class="table-responsive table-billing-history">
                    <partial name="_ResultadoBusqueda" model="@Model.listaResultado" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {


    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js")"></script>
    <link href="@Url.Content("~/js/datatables/datatables-simple-demo.js")" rel="stylesheet" />
    <script src="@Url.Content("~/js/datatables/simple-datatables.js")" crossorigin="anonymous"></script>
    <script src="~/js/datatables/umd.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            let dataTable = new simpleDatatables.DataTable("#datatable", {
                searchable: true,
                labels: {
                    "noRows": "No hay información",
                    perPage: "{select} Registros por página",
                    "info": "Mostrando {start} a {end} de {rows} Registros",
                    placeholder: "Filtro rápido...",
                },
                columns: [

                    {
                        select: 1,
                        type: "date",
                        format: "DD/MM/YYYY"
                    }
                ]
            });


            $(".loader").fadeOut("slow");



            //    new Litepicker({
            //        element: document.getElementById('txtFechaIngreso'),
            //        autoApply: true2021
            //,
            //    })


        });

        function btnBuscar() {

            var form = $('#frmListarSolicitudes')[0];
            var formData = new FormData(form);

            $.ajax({
                url: form.action,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                cache: false,
                beforeSend: function () {
                    $(".loader").fadeIn("slow");
                },
                error: function (jqXHR, textStatus, errorThrown) {

                    $('#alertError').show();
                    outputDetalleError.html(errorThrown);
                    $(".loader").fadeOut("slow");

                },
                success: function (response) {

                    $(".loader").fadeOut("slow");
                    if (response.codigo == 0) {


                        window.location.href = response.mensaje;


                    }
                    else if (response.codigo > 0) {


                        $("#dialogAlerta").modal("show");
                        $("#outputMensaje").html(response.mensaje);


                    }
                    else {


                        $("#dialogError").modal("show");
                        $("#outputMensajeError").html(response.mensaje);

                    }
                },
                complete: function (data) {
                    $(".loader").fadeOut("slow");

                }
            });

        }


    </script>

}
