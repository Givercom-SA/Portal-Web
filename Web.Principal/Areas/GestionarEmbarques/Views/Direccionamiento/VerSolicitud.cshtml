@model ViewModel.Datos.Embarque.SolicitudDireccionamiento.SolicitudResultVM
@{
    ViewBag.Title = "Detalle Solicitud";

}

@Html.Hidden("hddCodigoSolicitud", Model.Codigo)

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i class="bi bi-box-seam">  </i></div>
                        Detalle de Solicitud de Direccionamiento
                    </h1>
                    <div class="page-header-subtitle">Con esta opción usted podrá visualizar el detalle de una solicitud de direccionamiento.</div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main page content-->
<div class="container-xl px-4 mt-n10">
    <!-- Custom page header alternative example-->


    <div class="card card-header-actions mb-2">
        <div class="card-header">
            Solicitud: @Model.Codigo

            <button class="btn btn-sm btn-primary" type="button" onclick="javascript: history.go(-1)">Volver</button>

        </div>
        <div class="card-body">

            <div class="sbp-preview-content">

                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Estado:")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.EstadoNombre" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Modalidad: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.NombreModalidad" />
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Nro de Embarque:")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.NroEmbarque" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Fecha de Registro: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.FechaRegistro" />
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Tipo de Documento de Solicitante :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.NumeroDocumento" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Solicitante: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.Solicitante" />
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Almacen Direccionado :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.RazonSocial" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Receptor de Carga: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.ReceptorCarga" />
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Consignatario :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.Consignatario" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Cantidad de Contenedor: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.CantidadCnt" />
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Almacen de Destino :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.AlmacenDestino" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6">
                                @Html.Raw("Fecha de Evaluación: ")
                            </div>
                            <div class="col-6">
                                <input class="form-control  small" type="text" disabled value="@Model.FechaEvaluacion" />
                            </div>
                        </div>

                    </div>

                </div>

                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Usuario Evaluador :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                <input class="form-control  small" type="text" disabled value="@Model.UsuarioEvalua" />
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                     
                        </div>

                    </div>

                </div>



                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @Html.Raw("Estado :")
                            </div>
                            <div class="col-6 col-sm-6 ">
                                @if (Model.EstadoCodigo == "SA" || Model.EstadoCodigo == "SR")
                                {
                                    <select asp-for="@Model.EstadoCodigo" class="form-select small classEstadoDoc" disabled
                                            id="cmbEstado"
                                            onchange="visualizarMotRechazo(this, '@(Model.Id)')">
                                        <option value="SP">Pendiente</option>
                                        <option value="SA">Aprobar</option>
                                        <option value="SR">Rechazar</option>
                                    </select>
                                }
                                else
                                {
                                    <select asp-for="@Model.EstadoCodigo" class="form-select small classEstadoDoc"
                                            id="cmbEstado"
                                            onchange="visualizarMotRechazo(this, '@(Model.Id)')">
                                        <option value="0">Seleccionar</option>
                                        <option value="SA">Aprobar</option>
                                        <option value="SR">Rechazar</option>
                                    </select>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6  small ">
                        <div id="divMotRechazo" style="display:none;">
                            <div class="row">
                                <div class="col-6">
                                    @Html.Raw("Motivo Rechazo: ")
                                </div>

                                <div class="col-6">
                                    @if (Model.EstadoCodigo == "SA" || Model.EstadoCodigo == "SR")
                                    {

                                        <select class="form-select small" id="cmbRechazo" disabled
                                                asp-for="@Model.CodMotivoRechazo"
                                                asp-items="@ViewBag.ListarMotivosRechazos">
                                            <option value="0">Seleccione</option>
                                        </select>
                                    }
                                    else
                                    {
                                        <select class="form-select small" id="cmbRechazo"
                                                asp-for="@Model.CodMotivoRechazo"
                                                asp-items="@ViewBag.ListarMotivosRechazos">
                                            <option value="0">Seleccione</option>
                                        </select>
                                    }
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <div class="col-6 col-sm-6  small ">
                        <div class="row">
                            <div class="col-6 col-sm-6 ">
                                @if (Model.EstadoCodigo.Equals("SP"))
                                {
                                    <button class="btn btn-sm btn-primary" type="button" onclick="GuardarGestionDireccionamiento()"> Guardar </button>
                                }
                            </div>
                            <div class="col-6 col-sm-6 ">

                            </div>
                        </div>
                    </div>


                </div>






                <div style="position: absolute; bottom: 1rem; right: 1rem;">
                    <!-- Toast -->
                    <div class="toast" id="toastBasic" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
                        <div class="toast-header">
                            <i data-feather="bell"></i>
                            <strong class="mr-auto">Estado de Documentos</strong>
                            <button class="ml-2 mb-1 btn-close" type="button" data-bs-dismiss="toast" aria-label="Close">                                                                </button>
                        </div>
                        <div class="toast-body">Debe seleccionar el motivo de rechazo !!.</div>
                    </div>
                </div>


            </div>

                </div>

            </div>


    <div class="row mb-2">
        <div class="col-6">
            <div class="card card-header-actions mb-4">
                <div class="card-header">
                    Documentos Adjuntados
                
                </div>
                <div class="card-body px-0">
                    <div class="table-responsive table-billing-history">
                        @{int i = 0;}
                        @foreach (var item in Model.ListaDocumentos)
                        {
                        @Html.Hidden("hddCodDoc_" + i, item.Codigo)
                        <div class="d-flex align-items-center justify-content-between px-4">
                            <div class="d-flex align-items-center">
                                <i class="bi-file-pdf" style="font-size: 2rem; color: cornflowerblue;"></i>
                                <div class="ms-4">
                                    <div class="small">
                                        <a href="@Url.Content("~/tmpdwac/direccionamiento/" + item.UrlDocumento)" target="_blank"> @item.Nombre </a>
                                    </div>
                                </div>
                            </div>
                 
                        </div>
                
                        <hr />
                            i++;
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card card-header-actions mb-4">
                <div class="card-header">Historial Eventos</div>
                <div class="card-body px-0">
                    <div class="table-responsive table-billing-history">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th class="border-gray-200" scope="col">Usuario</th>
                                    <th class="border-gray-200" scope="col">Fecha</th>
                                    <th class="border-gray-200" scope="col">Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListaEventos)
                                {
                                    <tr>
                                        <td>@item.NombreUsuario</td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.FechaRegistro</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </div>

</div>






<div class="modal fade" data-bs-backdrop="static" id="modalResultRegistro" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Información</h5>
            </div>
            <div class="modal-body" id="mensaje"> Se registró la evaluación correctamente. </div>
            <div class="modal-footer">
                <button id="btnCerrar" class="btn btn-secondary" type="button" onclick="cerrarActualizar()">Ir a la bandeja</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogAlerta" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning">Alerta</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensaje"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogError" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button> 
            </div>
            <div class="modal-body">
                <output id="outputMensajeError"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>



@section Scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $(".loader").fadeOut("slow");
        });

        $(document).ready(function () {

            let codEstadRechazo = $("#cmbEstado").val();
            if (codEstadRechazo == "SR") $("#divMotRechazo").show();
                else $("#divMotRechazo").hide();
        
        });

        function visualizarMotRechazo(obj, valor) {
            let codEstadRechazo = $("#cmbEstado").val();
            if (codEstadRechazo == "SR") $("#divMotRechazo").show();
            else $("#divMotRechazo").hide();
        }

        function GuardarGestionDireccionamiento() {

            var codSolicitud = $("#hddCodigoSolicitud").val();
            var listaEstadoSelects = document.getElementsByClassName("classEstadoDoc");

            var cantidadDocumentos = 0;
            var cantidadNoSeleccionados = 0;
            var cantidadSeleccionados = 0;


            var DireccionamientoDocumentoParameter = new Object();
            DireccionamientoDocumentoParameter.Documentos = [];


            var codEstado = $("#cmbEstado").val();

            if (codEstado == "0") {
                $("#dialogAlerta").modal("show");
                $("#outputMensaje").html("Debe seleccionar un estado APROBAR o RECHAZAR.");

                return false;
            }




            $.each(listaEstadoSelects, function (index, value) {

                cantidadDocumentos = cantidadDocumentos + 1;

                var codDocumento = $("#hddCodDoc_" + index).val();
                var codEstadRechazo = $("#cmbRechazo").val();
                

                DireccionamientoDocumentoParameter.EstadoCodigo = codEstado ;
                DireccionamientoDocumentoParameter.CodigoMotivoRechazo = codEstadRechazo;
       

                if (codEstadRechazo == "0" && codEstado == "SR") {
                    cantidadNoSeleccionados = cantidadNoSeleccionados + 1;
                }
                else {
                    cantidadSeleccionados = cantidadSeleccionados + 1;
                    let objDireccionamientoDoc = new Object();

                    objDireccionamientoDoc.codSolicitud = codSolicitud;
                    objDireccionamientoDoc.codDocumento = codDocumento;
                    objDireccionamientoDoc.codEstado = value.value;
                    objDireccionamientoDoc.codEstadoRechazo = codEstadRechazo;

                    DireccionamientoDocumentoParameter.Documentos.push(objDireccionamientoDoc);
                }


            });


            DireccionamientoDocumentoParameter.CantidadNoSeleccionado = cantidadNoSeleccionados;
            DireccionamientoDocumentoParameter.CantidadDocumentos = cantidadDocumentos;
            DireccionamientoDocumentoParameter.CodigoSolicitudDireccionamiento = codSolicitud;
            DireccionamientoDocumentoParameter.CantidadSeleccionado = cantidadSeleccionados;

            if (cantidadNoSeleccionados > 0) {


                $("#dialogAlerta").modal("show");
                $("#outputMensaje").html("Debe seleccionar un motivo de rechazo para esta evaluación.");


            } else
            {
                if (cantidadSeleccionados > 0) {
                    actualizarEstadoDireccionamiento(DireccionamientoDocumentoParameter);
                }

            }

        }

        function actualizarEstadoDireccionamiento(listDireccionamientoDocumento) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("ActualizarEstadoPorSolicitud", "Direccionamiento", new { Area= "GestionarEmbarques" })',
                data: listDireccionamientoDocumento,
                beforeSend: function (xhr) {
                    $(".loader").fadeIn("slow");
                }

            }).done(function (data) {




                $(".loader").fadeOut("slow");
                $("#modalResultRegistro").modal("show");



            }).fail(function () {

                $(".loader").fadeOut("slow");

                $("#dialogError").modal("show");
                $("#outputMensajeError").html("Error inesperado de sistema");

                 
            });
        }



        function fnRegresarLista() {

             window.location.href = '@Url.Action("ListarSolicitudes", "Direccionamiento", new {area="GestionarEmbarques"})';

        }

        function cerrarActualizar() {

              window.location.href = '@Url.Action("ListarSolicitudes", "Direccionamiento", new {area="GestionarEmbarques"})';



        }

    </script>

}