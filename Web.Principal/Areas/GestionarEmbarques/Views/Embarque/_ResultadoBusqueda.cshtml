@model Web.Principal.Areas.GestionarEmbarques.Models.EmbarqueBuscarModel

<table id="datatable" class="table">
    <thead>
        <tr>
            <th>Nro. Orden de Trabajo</th>
            <th>Numeración de Embarque</th>
            @if (Model.Servicio.Equals("M") && Model.Origen.Equals("I"))
            {   <th>Nro. de Routing Order</th>
            }else if(Model.Servicio.Equals("M") && Model.Origen.Equals("E"))
            {   <th>Nro. de Booking</th>                
            }else if(Model.Servicio.Equals("A"))
            {   <th>Nro. de Instrucción</th>    }
            <th>Origen</th>
            <th>Puerto de Carga</th>
            <th>Puerto de Descarga</th>
            <th>Fecha de Descarga</th>
            <th>Nro. de Manifiesto</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Nro. Orden de Trabajo</th>
            <th>Numeración de Embarque</th>
            @if (Model.Servicio.Equals("M") && Model.Origen.Equals("I"))
            {   <th>Nro. de Routing Order</th>
            }else if(Model.Servicio.Equals("M") && Model.Origen.Equals("E"))
            {   <th>Nro. de Booking</th>                
            }else if(Model.Servicio.Equals("A"))
            {   <th>Nro. de Instrucción</th>    }
            <th>Origen</th>
            <th>Puerto de Carga</th>
            <th>Puerto de Descarga</th>
            <th>Fecha de Descarga</th>
            <th>Nro. de Manifiesto</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model.listEmbarques.listaEmbarques)
        {
            <tr>

                <td>@item.NROOT</td>
                <td><a href='@Url.Action("Detalle","Embarque", new { area="GestionarEmbarques", codigo=item.KEYBLD, anio=Model.Anio,tipofiltro=Model.TipoFiltro, filtro=Model.Filtro, servicio=Model.Servicio, origen=Model.Origen })'> @item.NROBL </a></td>
                <td>@item.NRORO</td>
                <td>@item.ORIGEN</td>
                <td>@item.POL</td>
                <td>@item.POD</td>
                <td>@item.ETAPOD</td>
                <td>@item.MANIFIESTO</td>
            </tr>
        }
    </tbody>
</table>