@model Web.Principal.Areas.GestionarEmbarques.Models.EmbarqueBuscarModel

@{
    ViewBag.Title = "Buscar operaciones de embarque";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i class="bi bi-box-seam"></i></div>
                        Consulta de Embarques
                    </h1>
                    <div class="page-header-subtitle">Con esta opción usted podrá consultar los embarques que tiene con nosotros.</div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4">
    <form asp-controller="Embarque" asp-area="GestionarEmbarques" asp-action="BuscarEncriptar" method="post" enctype="multipart/form-data" id="frmBuscarEmbarque">

        <div class="card card-header-actions mt-n10">
            <div class="card-header">Filtros para Búsqueda    <button class="btn btn-sm btn-primary" type="button" onclick="onBuscarEmbarque()">Buscar</button></div>

            <div class="card-body">
                <div class="sbp-preview-content">

                    <div class="row gx-3">

                        <div class="col-md-3">
                            <div class="mb-3">

                                <label asp-for="@Model.Servicio" class="small mb-1"></label>
                                <select asp-for="@Model.Servicio" id="ddlServicio"
                                        asp-items="Model.ListaServicios" onchange="onChangeServicio(this)"
                                        class="form-select small">
                                    <option value="0">Seleccionar</option>
                                </select>

                                <span asp-validation-for="@Model.Servicio" id="spanValidarServicio" class="small text-danger"></span>


                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="@Model.Origen" class="small mb-1"></label>
                                <select asp-for="@Model.Origen" onchange="onChangeOrigen(this)"
                                        asp-items="Model.ListaOrigen" id="ddlOrigen"
                                        class="form-select small">
                                    <option value="0">Seleccionar</option>
                                </select>

                                <span asp-validation-for="@Model.Origen" class="small text-danger" id="spanValidarOrigen"></span>


                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">

                        <div class="col-md-3">
                            <div class="mb-3">

                                <label asp-for="@Model.Anio" class="small mb-1"></label>
                                <select asp-for="@Model.Anio" id="ddlAnio"
                                        asp-items="Model.ListAnios" onchange="onChangeAnio(this)"
                                        class="form-select small">
                                    <option value="0">Seleccionar</option>
                                </select>

                                <span asp-validation-for="@Model.Anio" id="spanValidarAnio" class="small text-danger"></span>


                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="@Model.TipoFiltro" class="small mb-1"></label>
                                <select asp-for="@Model.TipoFiltro" onchange="onChangeTipoCriterio(this)"
                                        asp-items="Model.TipoFiltros" id="ddlTipoCriterio"
                                        class="form-select small">
                                    <option value="a">Seleccionar</option>
                                </select>

                                <span asp-validation-for="@Model.TipoFiltro" class="small text-danger" id="spanValidarFiltro"></span>


                            </div>
                        </div>

                        <div class="col-md-3">

                            <div class="mb-3">
                                <label asp-for="@Model.Filtro" class="small mb-1"></label>
                                <input asp-for="@Model.Filtro" class="form-control small" id="txtRuc" type="text" maxlength="20" placeholder="Ingrese un criterio" />
                                <span asp-validation-for="@Model.Filtro" id="spanValidarFiltro" class="small text-danger"></span>

                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>

    </form>


</div>

<div class="container-xl my-3 px-4">
    <div class="card card-header-actions mb-4">
        <div class="card-header ">
            Registros Encontrados

        </div>
        <div class="card-body">
            <!-- Billing history table-->
            <div class="table-responsive table-billing-history">
                @if (Model.listEmbarques != null && Model.listEmbarques.listaEmbarques.Count() > 0)
                {
                    <partial name="_ResultadoBusqueda" model="@Model" />
                }
                else
                {
                    @Html.Raw("No existen registros...");
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogOk" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-info">Información</h5>

            </div>
            <div class="modal-body">
                <output id="outputMensajeOk"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal" onclick="ActualizarForm()">Cerrar y actualizar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogAlerta" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning">Alerta</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensaje"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogError" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensajeError"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js")"></script>

    <script src="@Url.Content("~/js/datatables/simple-datatables.js")" crossorigin="anonymous"></script>
    <script src="~/js/datatables/umd.js"></script>



    <script type="text/javascript">

        $(document).ready(function () {

            $(".loader").fadeOut("slow");


            var defaultRangeValidator = $.validator.methods.range;
            $.validator.methods.range = function (value, element, param) {
                if (element.type === 'checkbox') {
                    // if it's a checkbox return true if it is checked
                    return element.checked;
                } else {
                    // otherwise run the default validation function
                    return defaultRangeValidator.call(this, value, element, param);
                }
            }


            let dataTable = new simpleDatatables.DataTable("#datatable", {
                searchable: true,
                labels: {
                    "noRows": "No hay información",
                    perPage: "{select} Registros por página",
                    "info": "Mostrando {start} a {end} de {rows} Registros",
                    placeholder: "Filtro rápido...",
                },
                columns: [

                    {
                        select: 6,
                        type: "date",
                        format: "DD/MM/YYYY"
                    }
                ]
            });

        });


        function buscarEmbarques() {

            var form = $('#frmBuscarEmbarque')[0];
            var formData = new FormData(form);

            $.ajax({
                url: form.action,
                data: formData,
                type: 'POST',
                contentType: false,
                processData: false,
                cache: false,
                beforeSend: function () {
                    $(".loader").fadeIn("slow");
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $(".loader").fadeOut("slow");

                    $('#dialogError').modal("show");

                    if (jqXHR.status == 401) {
                        $("#outputMensajeError").html("Estimado usuario, "+jqXHR.responseJSON +".");
                    } else {
                        $("#outputMensajeError").html("Estimado usuario, ocurrio un error inesperado detalle: "+textStatus + " - " + errorThrown);
                    }
                    
                },
                success: function (response) {

                    $(".loader").fadeOut("slow");
                    if (response.codigo == 0) {
                        window.location.href = response.mensaje;
                    }
                    else if (response.codigo > 0) {

                        
                        $("#dialogAlerta").modal("show");
                        $("#outputMensaje").html(response.mensaje);


                    }
                    else {

                        $('#dialogError').modal("show");
                        $("#outputMensajeError").html(response.mensaje);

                    }
                },
                complete: function (data) {
                    $(".loader").fadeOut("slow");

                }
            });
        }

        function onChangeAnio(obj) {

            let objTihs = $(obj);

            if (objTihs.children("option:selected").val() == "0") {
                $("#spanValidarAnio").html("Seleccionar un año");

            } else {
                $("#spanValidarAnio").html("");

            }

        }

        function onChangeTipoCriterio(obj) {

            let objTihs = $(obj);

            if (objTihs.children("option:selected").val() == "a") {
                $("#spanValidarFiltro").html("Seleccionar un tipo de criterio");

            } else {
                $("#spanValidarFiltro").html("");

            }

        }

        function onChangeServicio(obj) {

            let objTihs = $(obj);

            if (objTihs.children("option:selected").val() == "0") {
                $("#spanValidarServicio").html("Seleccionar un servicio");

            } else {
                $("#spanValidarServicio").html("");

            }

        }

        function onChangeOrigen(obj) {

            let objTihs = $(obj);
            if (objTihs.children("option:selected").val() == "0") {
                $("#spanValidarOrigen").html("Seleccionar el origen");

            } else {
                $("#spanValidarOrigen").html("");

            }

        }

        function onBuscarEmbarque() {

            let blValidar = true;


            if ($("#ddlServicio").children("option:selected").val() == "0") {
                $("#spanValidarServicio").html("Seleccionar un servicio");
                blValidar = false;
            } else {
                $("#spanValidarServicio").html("");

            }
            if ($("#ddlOrigen").children("option:selected").val() == "0") {
                $("#spanValidarOrigen").html("Seleccionar el origen");
                blValidar = false;
            } else {
                $("#spanValidarOrigen").html("");

            }

            if ($("#ddlAnio").children("option:selected").val() == "0") {
                $("#spanValidarAnio").html("Seleccionar un año");
                blValidar = false;
            } else {
                $("#spanValidarAnio").html("");

            }

            if ($("#ddlTipoCriterio").children("option:selected").val() == "a") {
                $("#spanValidarFiltro").html("Seleccionar un tipo de criterio");
                blValidar = false;

            } else {
                $("#spanValidarFiltro").html("");

            }

            if (blValidar) {

                buscarEmbarques();
            }


        }

    </script>

}

