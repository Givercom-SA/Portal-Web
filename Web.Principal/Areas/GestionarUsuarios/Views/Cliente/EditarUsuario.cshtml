@model Web.Principal.Areas.GestionarUsuarios.Models.EditarClienteModel
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    this.ViewData.Add("ModoLectura", false);
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="user"></i></div>
                        Editar Usuario
                    </h1>
                    <div class="page-header-subtitle">Con esta opción usted podrá modificar los datos del usuario.</div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">

    <!-- Payment methods card-->
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Editar Usuario
            <button id="btnVolver" class="btn btn-sm btn-primary" type="button" onclick="javascript: history.go(-1)">Volver</button>
        </div>

        <div class="card-body">
            <div class="sbp-preview-content">

                <form id="frmUsuario" asp-controller="Cliente" asp-area="GestionarUsuarios" asp-action="ActualizarUsuario"
                      method="post" enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;">

                    <input type="hidden" asp-for="@Model.IdUsuario" />
                    <input type="hidden" asp-for="@Model.Correo" />


                    <div class="row gx-3 mb-3">

                        <div class="col-sm-6">
                            <label asp-for="@Model.Correo" class="small mb-1"></label>
                            <input readonly asp-for="@Model.Correo" class="form-control small" type="text" placeholder="Ingresar Correo" />

                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.Nombres" class="small mb-1"></label>

                            <input asp-for="@Model.Nombres" class="form-control " type="text" placeholder="Ingresar Nombres" />
                            <span asp-validation-for="@Model.Nombres" class="small text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3 mb-3">

                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoPaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoPaterno" class="form-control" type="text" placeholder="Ingresar Apellido Paterno" />

                            <span asp-validation-for="@Model.ApellidoPaterno" class="text-danger small"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoMaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoMaterno" class="form-control" type="text" placeholder="Ingresar Apellido Materno" />



                            <span asp-validation-for="@Model.ApellidoMaterno" class="text-danger small"></span>
                        </div>
                    </div>





                    <div class="row gx-3 mb-3">
                        <div class="col-sm-6">
                            <label class="small mb-1">Estado</label>
                            <fieldset class="border p-2 mb-2">

                                <div class="form-check form-check-solid">
                                    <input asp-for="@Model.Activo" class="form-check-input border-primary" id="Radio1" type="radio" value="true">
                                    <label class="form-check-label small" for="Radio1">Activo</label>
                                </div>
                                <div class="form-check form-check-solid">
                                    <input asp-for="@Model.Activo" class="form-check-input border-primary" id="Radio2" type="radio" value="false">
                                    <label class="form-check-label small" for="Radio2">Inactivo</label>
                                </div>
                            </fieldset>

                        </div>
                        <div class="col-sm-6">
                            <label class="small mb-1">Es Administrador de Entidad</label>
                            @if (Model.IdEntidad != 0)
                            {
                                @if (@Model.EsAdmin)
                                {

                                    <input class="form-control" disabled type="text" placeholder="" value="SI" />
                                }
                                else
                                {
                                    <input class="form-control" disabled type="text" placeholder="" value="NO" />
                                }


                            }

                        </div>

                    </div>
                    @if (@Model.EsAdmin == false)
                    {

                        <div class="row gx-3 mb-3">
                            <div class="col-sm-12">
                                <label class="small mb-1">Permisos</label>
                                @await Html.PartialAsync("_MenusPorPerfil", Model)
                            </div>
                        </div>
                    }
                    <div id="MensajeResult"></div>
                    <hr />
                    <div class="mb-2 text-right">

                        <button id="btnGuardar" class="btn btn-primary" type="button">Guardar Cambios</button>

                    </div>
                </form>


            </div>
        </div>
    </div>
</div>



<div class="modal fade" data-bs-backdrop="static" id="modal_mensaje_result" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contraseña Restablecer</h5>
            </div>
            <div class="modal-body">  Se restablecio la contraseña con éxito.  </div>
            <div class="modal-footer">
                <button id="btnCerrar" class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" data-bs-backdrop="static" id="modal_mensaje" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Usuario Actualizado</h5>
            </div>
            <div class="modal-body" id="mensaje_ok"></div>
            <div class="modal-footer">
                <button id="btnCerrar" class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" id="divModalConfirmar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header text-info">
                <h5 class="modal-title">Confirmar</h5>
            </div>

            <div class="modal-body" id="divModalConfirmarMensaje">

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="button" data-bs-dismiss="modal" onclick="ActualizarUsuario()">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" id="divModalInformacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Usuario Creado</h5>
            </div>
            <div class="modal-body" id="mensaje"></div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-bs-dismiss="modal" onclick="cerrarActualizar()">Cerrar</button>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" data-bs-backdrop="static" id="divModalDanger" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error!!</h5>
            </div>
            <div class="modal-body" id="divMensajeDanger"></div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" data-bs-backdrop="static" id="divModalWarning" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Alerta!!</h5>
            </div>
            <div class="modal-body" id="divMensajeWarning"></div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>

</div>


<div class="modal fade" id="dialogAlerta" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning">Alerta</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensaje" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>


<div class="modal fade" id="dialogError" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensajeError" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogOk" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Usuario Creada</h5>

            </div>
            <div class="modal-body">
                <output id="outputMensajeOk" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal" onclick="ActualizarForm()">Cerrar</button></div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="@Url.Content("~/js/datatables/simple-datatables.js")" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js")"></script>

    <script>
        $(document).ready(function () {
            $(".loader").fadeOut("slow");
        });

        $('input[type=radio][name=Perfil]').change(function () {

            var IdUsuario = '@ViewBag.IdUsuario';
            var IdPerfil = this.value;
            $.ajax({
                type: "GET",
                url: "/GestionarUsuarios/Usuario/MenusPorPerfil?IdPerfil=" + IdPerfil + "&IdUsuario=" + IdUsuario,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'
            })
            .done(function (result) {
                if (result != null) {

                    $('#MenuCheckBox').html(result);

                } else {

                }
            })
            .fail(function (xhr, status, error) {

            })
            .always(function () {

            });
        });

        $("#btnGuardar").click(function () {
            var isValid = $('#frmUsuario').valid();

            if (isValid) {
                $("#divModalConfirmar").modal("show");
                $("#divModalConfirmarMensaje").html("¿Esta seguro de registrar los cambios?");
            } else {


            }

        });


        function ActualizarUsuario() {


                $('#frmUsuario').submit();

        }


        function AJAXSubmit(oFormElement) {



            const formData = new FormData(oFormElement);

            try {

                var isValid = $("#frmUsuario").valid();

                if (isValid) {

                    $.ajax({
                        url: oFormElement.action,
                        data: formData,
                        type: 'POST',
                        contentType: false,
                        processData: false,
                        cache: false,
                        beforeSend: function () {
                            $(".loader").fadeIn("slow");
                        },
                        error: function (jqXHR, textStatus, errorThrown) {


                            $(".loader").fadeOut("slow");


                            $("#dialogError").modal("show");

                                if (jqXHR.status == 401) {
                                    $("#outputMensajeError").html("@Utilitario.Constante.SistemaConstante.Error.YouDoNotHaveAccess");
                                } else {
                                    $("#outputMensajeError").html("Estimado usuario, ocurrio un error inesperado detalle: "+ textStatus + " - " + errorThrown);
                                }

                        },
                        success: function (response) {

                            $(".loader").fadeOut("slow");
                            if (response.codigo == 0) {


                                $("#dialogOk").modal("show");
                                $("#outputMensajeOk").html(response.mensaje);

                            }
                            else if (response.codigo > 0) {


                                $("#dialogAlerta").modal("show");
                                $("#outputMensaje").html(response.mensaje);


                            }
                            else {


                                $("#dialogError").modal("show");
                                $("#outputMensajeError").html(response.mensaje);



                            }
                        },
                        complete: function (data) {
                            $(".loader").fadeOut("slow");

                        }
                    });
                }


            } catch (error) {

                $(".loader").fadeOut("slow");
                $("#dialogError").modal("show");
                $("#outputMensajeError").html("Ocurrio un error inesperado, por favor intente nuevamente.");


            }


        }




    </script>
}