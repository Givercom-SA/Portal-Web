@model IEnumerable<ViewModel.Datos.UsuarioRegistro.ClienteVM>

<table  id="datatable" class="table">
    <thead>
        <tr>

            <th class="border-gray-200" scope="col">Tipo de Documento</th>
            <th class="border-gray-200" scope="col">Número de Documento</th>
            <th class="border-gray-200" scope="col">Razon Social / Representante Legal</th>
            <th class="border-gray-200" scope="col">Estado</th>
            <th class="border-gray-200" scope="col" title="Cliente Final">CL</th>
            <th class="border-gray-200" scope="col" title="Cliente Forwarder">WS</th>
            <th class="border-gray-200" scope="col" title="Cliente Broker">CB</th>
            <th class="border-gray-200" scope="col" title="Cliente Agente de Aduana">AA</th>
            <th width="100px" class="border-gray-200" scope="col">Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>  @item.TipoDocumentoNombre </td>
            <td><a  href="@Url.Action("Detalle","Cliente",new { area="GestionarUsuarios", Id=item.IdEntidad})" title="Ver Información"> @item.NumeroDocumento </a></td>
            <td>@item.RazonSocialRepresentanteLegal()</td>

            @if (item.Activo == true)
            {
                <td>  <span class="badge bg-light text-success">Activo</span>  </td>
            }
            else
            {
                <td>  <span class="badge bg-light text-danger">No activo</span> </td>
            }

            @if (string.IsNullOrEmpty(item.ClienteFinal))
            {
                <td><input type="checkbox" class="form-check-input" disabled> </td>
            }
            else
            {
                <td><input type="checkbox" class="form-check-input" checked disabled> </td>
            }

            @if (string.IsNullOrEmpty(item.ClienteForwarder))
            {
                <td><input type="checkbox" class="form-check-input" disabled> </td>
            }
            else
            {
                <td><input type="checkbox" class="form-check-input" checked disabled> </td>
            }

            @if (string.IsNullOrEmpty(item.ClienteBroker))
            {
                <td><input type="checkbox" class="form-check-input" disabled> </td>
            }
            else
            {
                <td><input type="checkbox" class="form-check-input" checked disabled> </td>
            }

            @if (string.IsNullOrEmpty(item.AgenteAduana))
            {
                <td><input type="checkbox" class="form-check-input" disabled> </td>
            }
            else
            {
                <td><input type="checkbox" class="form-check-input" checked disabled> </td>
            }

            <td>
                <div class="dropdown no-caret">
                    <button class="btn btn-transparent-dark btn-icon dropdown-toggle" id="dropdownPeople6" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i data-feather="more-vertical"></i></button>
                    <div class="dropdown-menu dropdown-menu-end animated--fade-in-up" aria-labelledby="dropdownPeople6">
                        <a class="dropdown-item" href="@Url.Action("Detalle","Cliente",new { area="GestionarUsuarios", Id=item.IdEntidad})" title="Ver Información"><i data-feather="info"></i> &nbsp;Ver Informacion</a>
                        @if (!item.Activo)
                        {
                            <a class="dropdown-item" onclick="Activar('@item.RazonSocialRepresentanteLegal()','@item.IdEntidad')" href='javascript:void(0)' title="Ver Información"><i data-feather="circle"></i> &nbsp;Activar</a>
                        }
                        else
                        {
                            <a class="dropdown-item" onclick="Desactivar('@item.RazonSocialRepresentanteLegal()','@item.IdEntidad')" href='javascript:void(0)' title="Ver Información"><i data-feather="minus-circle"></i> &nbsp;Desactivar</a>
                        }

                    </div>
                </div>
            </td>

        </tr>
        }

    </tbody>
</table>