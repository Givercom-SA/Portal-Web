@model Web.Principal.Areas.GestionarUsuarios.Models.CrearUsuariosModel
@{
    ViewData["Title"] = "Nuevo Usuario Secundario";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    this.ViewData.Add("ModoLectura", false);
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>



<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                        Crear Usuario Secundario
                    </h1>
                    <div class="page-header-subtitle">Crear nuevo usuario secundario.</div>
                </div>
            </div>
        </div>
    </div>
</header>



<div class="container-xl px-4 mt-n10">

    <!-- Payment methods card-->
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Crear Usuario Secundario
            <button id="btnVolver" class="btn btn-sm btn-primary" onclick="javascript: history.go(-1)" type="button">Volver</button>
        </div>

        <div class="card-body">
            <div class="sbp-preview-content">

                <form id="frmUsuario" autocomplete="off">

                    <div class="row gx-3 mb-3">


                        <div class="col-sm-6">
                            <label asp-for="@Model.Correo" class="small mb-1"></label>
                            <input asp-for="@Model.Correo" class="form-control" type="text" placeholder="Ingresar Correo" />
                            <span asp-validation-for="@Model.Correo" class="small text-danger small"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.Nombres" class="small mb-1"></label>
                            <input asp-for="@Model.Nombres" class="form-control" type="text" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.Nombres" class="small text-danger small"></span>
                        </div>

                    </div>
                    <div class="row gx-3 mb-3">


                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoPaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoPaterno" class="form-control" type="text" placeholder="Ingresar Correo" />
                            <span asp-validation-for="@Model.ApellidoPaterno" class="small text-danger small"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoMaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoMaterno" class="form-control" type="text" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.ApellidoMaterno" class="small text-danger small"></span>
                        </div>

                    </div>

                    <div class="row gx-3 mb-3">
                        <div class="col-sm-6">
                            <label asp-for="@Model.Contrasenia" class="small mb-1"></label>
                            <input asp-for="@Model.Contrasenia" class="form-control" type="password" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.Contrasenia" class="small text-danger small"></span>
                        </div>


                        <div class="col-sm-6">
                            <label asp-for="@Model.ConfirmarContrasenia" class="small mb-1"></label>
                            <input asp-for="@Model.ConfirmarContrasenia" class="form-control" type="password" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="@Model.ConfirmarContrasenia" class="small text-danger small"></span>
                        </div>
                    </div>

               
                    <div class="row gx-3 mb-3">
                        <div class="col-sm-12">
                            <label class="small mb-1">Accesos</label>
                            @await Html.PartialAsync("_MenusPorPerfil", Model.MenuPerfil)
                        </div>
                    </div>


                    <div id="MensajeResult"></div>
                    <hr />
                    <div class="mb-2 text-right">
                        <button class="btn btn-primary" type="submit">Registrar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" id="modal_mensaje" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Usuario Creado</h5>
            </div>
            <div class="modal-body" id="mensaje"></div>
            <div class="modal-footer">
                <button id="btnCerrar" class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".loader").fadeOut("slow");
        });

        $('input[type=radio][name=Perfil]').change(function () {
            var IdPerfil = this.value;
            $.ajax({
                type: "GET",
                url: "/GestionarUsuarios/UsuarioSecundario/MenusPorPerfil?IdPerfil=" + IdPerfil + "&IdUsuario=0",
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'
            })
                .done(function (result) {
                    if (result != null) {

                        $('#MenuCheckBox').html(result);

                    } else {

                    }
                })
                .fail(function (xhr, status, error) {

                })
                .always(function () {

                });
        });

        $("#frmUsuario").submit(function (e) {
            $('#MensajeResult').html("");
            e.preventDefault();
            var isValid = $('#frmUsuario').valid();
            if (isValid) {
                $(".loader").fadeIn("slow");
                var form = $('#frmUsuario')[0];
                var formData = new FormData(form);
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("CrearUsuario", "UsuarioSecundario", new { area= "GestionarUsuarios" })",
                    data: formData,
                    contentType: false,
                    processData: false
                })
                    .done(function (result) {
                        if (result != null) {
                            if (result.codigo == 0) {
                                $('#mensaje').html(result.mensaje);
                                $('#modal_mensaje').modal('show');
                            } else {
                                ShowAlertMensage('MensajeResult', 'warning', '', result.mensaje, 0, null);
                            }
                        } else {

                        }
                    })
                    .fail(function (xhr, status, error) {

                    })
                    .always(function () {
                        $(".loader").fadeOut("slow");
                    });
            }
        });

        $("#btnCerrar").click(function () {
            $('#modal_mensaje').modal('hide');
            window.location.href = "/GestionarUsuarios/UsuarioSecundario/ListarUsuarios";
        });

        //$("#btnVolver").click(function () {
        //    window.location.href = "/GestionarUsuarios/UsuarioSecundario/ListarUsuarios";
        //});

    </script>
}