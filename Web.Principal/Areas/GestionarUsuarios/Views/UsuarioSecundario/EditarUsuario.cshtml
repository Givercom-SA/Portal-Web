@model Web.Principal.Areas.GestionarUsuarios.Models.EditarUsuarioInternoModel
@{
    ViewData["Title"] = "Editar Usuario Secundario";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    this.ViewData.Add("ModoLectura", false);
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                        Editar Usuario Secundario
                    </h1>
                    <div class="page-header-subtitle">Aquí puedes modificar perfiles o restablecer su contraseña.</div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">

    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Editar Usuario Secundario
            <button id="btnVolver" class="btn btn-sm btn-primary" onclick="javascript: history.go(-1)" type="button">Volver</button>
        </div>

        <div class="card-body">
            <div class="sbp-preview-content">
                <form id="frmUsuario" asp-action="ActualizarUsuario" asp-controller="UsuarioSecundario" asp-area="GestionarUsuarios" method="post" onsubmit="ActualizarUsuario(this);return false;">


                    <input type="hidden" asp-for="@Model.IdUsuario">
                    <input type="hidden" asp-for="@Model.Contrasenia" value="*ABCDEGhijcsd123456--*">
                    <input type="hidden" asp-for="@Model.ConfirmarContrasenia" value="*ABCDEGhijcsd123456--*">

                    <div class="row gx-3 mb-3">


                        <div class="col-sm-6">
                            <label asp-for="@Model.Correo" class="small mb-1"></label>
                            <input asp-for="@Model.Correo" class="form-control" readonly type="text" placeholder="Ingresar Correo" />
                            <span asp-validation-for="@Model.Correo" class="small text-danger small"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.Nombres" class="small mb-1"></label>
                            <input asp-for="@Model.Nombres" class="form-control" type="text" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.Nombres" class="small text-danger small"></span>
                        </div>

                    </div>
                    <div class="row gx-3 mb-3">


                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoPaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoPaterno" class="form-control" type="text" placeholder="Ingresar Correo" />
                            <span asp-validation-for="@Model.ApellidoPaterno" class="small text-danger small"></span>
                        </div>

                        <div class="col-sm-6">
                            <label asp-for="@Model.ApellidoMaterno" class="small mb-1"></label>
                            <input asp-for="@Model.ApellidoMaterno" class="form-control" type="text" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.ApellidoMaterno" class="small text-danger small"></span>
                        </div>

                    </div>


                    <div class="row gx-3 mb-3">

                        <div class="col-sm-6">
                            <label class="small mb-1">Estado</label>
                            <fieldset class="border p-2">

                                <div class="form-check form-check-solid">
                                    <input asp-for="@Model.Activo" class="form-check-input" id="Radio1" type="radio" value="true">
                                    <label class="form-check-label small" for="Radio1">Activo</label>
                                </div>
                                <div class="form-check form-check-solid">
                                    <input asp-for="@Model.Activo" class="form-check-input" id="Radio2" type="radio" value="false">
                                    <label class="form-check-label small" for="Radio2">Inactivo</label>
                                </div>
                            </fieldset>
                        </div>

                        <div class="row gx-3 mb-3">
                            <div class="col-sm-12">
                                <label class="small mb-1">Accesos</label>
                                @await Html.PartialAsync("_MenusPorPerfil", Model.MenuPerfil)
                            </div>
                        </div>

                    </div>
                    <div id="MensajeResult"></div>
                    <hr />
                    <div class="mb-2 text-right">
                        <button id="btnGuardar" class="btn btn-primary" type="submit">Guardar Cambios</button>
                        <button id="btnRestablecer" class="btn btn-primary" type="button">Restablecer Contraseña</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-bs-backdrop="static" id="modal_restablecer" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="frmRestablecer" asp-action="CambiarClave" asp-controller="UsuarioSecundario" asp-area="GestionarUsuarios" method="post" onsubmit="AJAXSubmit(this);return false;">
                <div class="modal-header">
                    <h5 class="modal-title">Restablecer Contraseña</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="mensaje">
                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Nueva Contraseña</label>
                        <div class="col-sm-7">

                            <input id="ContraseniarRecuperar" asp-for="@Model.Contrasenia" class="form-control" type="password" placeholder="Ingresar Contraseña" />
                            <span asp-validation-for="@Model.Contrasenia" class="small text-danger"></span>
                            <input type="hidden" asp-for="@Model.IdUsuario">
                        </div>
                    </div> 
                    <div class="form-group row mb-3">
                        <label asp-for="@Model.ConfirmarContrasenia" class="col-sm-5 col-form-label"></label>
                        <div class="col-sm-7">
                            <input asp-for="@Model.ConfirmarContrasenia" id="ContraseniaConfirmar" class="form-control" type="password" placeholder="Confirmar Contraseña" />
                            <span asp-validation-for="@Model.ConfirmarContrasenia" class="small text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="modal fade" id="dialogOk" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmación</h5>

            </div>
            <div class="modal-body">
                <output id="outputMensajeOk" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal" onclick="ActualizarForm()">Cerrar</button></div>
        </div>
    </div>
</div>


<div class="modal fade" id="dialogAlerta" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning">Alerta</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensaje" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogError" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensajeError" class="small"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>

        $(document).ready(function () {

            $(".loader").fadeOut("slow");


            $("#btnRestablecer").click(function () {

                 
                $('#ContraseniaConfirmar').val('');
                $('#ContraseniarRecuperar').val('');
                $('#ContraseniarRecuperar').focus();
                $('#modal_restablecer').modal('show');
            });

        });

        function ActualizarUsuario(oFormElement) {

            var isValid = $('#frmUsuario').valid();

            if (isValid) {

                var formData = new FormData(oFormElement);

                $.ajax({
                    url: oFormElement.action,
                    data: formData,
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    cache: false,
                    beforeSend: function () {
                        $(".loader").fadeIn("slow");
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $(".loader").fadeOut("slow");
                        $('#dialogError').show();
                        $("#outputMensajeError").html('Estimado usuario, ocurrio un error inesperado : ' + errorThrown);
                     

                    },
                    success: function (response) {

                        if (response != null) {
                            if (response.codigo == 0) {
                                $('#modal_restablecer').modal('hide');
                                $("#dialogOk").modal("show");
                                $("#outputMensajeOk").html(response.mensaje);

                               

                            } else {
                                $('#dialogAlerta').show();
                                $("#outputMensaje").html('Estimado usuario, ocurrio un error inesperado : ' + + response.mensaje);
                            }
                        } else {
                            $('#dialogError').show();
                            $("#outputMensajeError").html('Estimado usuario, ocurrio un error inesperado : ' + + response.mensaje);
                        }

                    },
                    complete: function (data) {
                        $(".loader").fadeOut("slow");
                

                    }
                });
            }

        }

        function AJAXSubmit(oFormElement) {

            var isValid = $('#frmRestablecer').valid();

            if (isValid) {

                var formData = new FormData(oFormElement);
                $.ajax({
                    url: oFormElement.action,
                    data: formData,
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    cache: false,
                    beforeSend: function () {
                        $(".loader").fadeIn("slow");
                    },
                    error: function (jqXHR, textStatus, errorThrown) {

                        $(".loader").fadeOut("slow");
                        $('#dialogError').show();
                        $("#outputMensajeError").html('Estimado usuario, ocurrio un error inesperado : ' + errorThrown);

                    },
                    success: function (response) {


                        if (response != null) {
                            if (response.codigo == 0) {
                                $('#modal_restablecer').modal('hide');
                                $("#dialogOk").modal("show");
                                $("#outputMensajeOk").html( response.mensaje);
                            } else {
                                $('#dialogAlerta').show();
                                $("#outputMensaje").html( response.mensaje);
                            }
                        } else {
                            $('#dialogError').show();
                            $("#outputMensajeError").html(response.mensaje);
                        }


                    },
                    complete: function (data) {


                        $(".loader").fadeOut("slow");
                    }
                });

            } else {

                $('#dialogAlerta').show();
                $("#outputMensaje").html('Estimado usuario, revisar los campos obligatorios');
            }
        }

    </script>
}