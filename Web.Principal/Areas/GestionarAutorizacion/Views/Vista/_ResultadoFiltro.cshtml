@model IEnumerable<ViewModel.Datos.Vista.VistaVM>

<table id="datatable" class="table">
    <thead>
        <tr>
            <th width="50px" class="border-gray-200" scope="col">Id</th>
            <th class="border-gray-200" scope="col">Nombre</th>
            <th class="border-gray-200" scope="col">Area</th>
            <th class="border-gray-200" scope="col">Controller</th>
            <th class="border-gray-200" scope="col">Action</th>
            <th class="border-gray-200" scope="col">Verbo</th>
            <th class="border-gray-200" scope="col">Es Opción</th>
            <th class="border-gray-200" scope="col">Vista Padre</th>
            <th class="border-gray-200" scope="col">Estado</th>
            <th width="120px" class="border-gray-200" scope="col">Acción</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var itemVista in Model)
        {

        <tr>
            <td>@itemVista.IdVista</td>
            <td><a href="@Url.Action("Detalle", "Vista", new { area = "GestionarAutorizacion", parkey = Security.Common.Encriptador.Instance.EncriptarTexto(itemVista.IdVista.ToString()) })" title="Ver Información">@itemVista.VistaNombre</a></td>
            <td>@itemVista.VistaArea</td>
            <td>@itemVista.VistaController</td>
            <td>@itemVista.VistaAction</td>
            <td>@itemVista.VistaVerbo</td>
            <td>
         
                        @if (itemVista.VistaOpcion==1)
                        {
                     <span>  @Html.Raw("SI")</span>
                        }
                        else
                        {
            <span>  @Html.Raw("NO")</span>
                        }
                    </td>
            <td>@itemVista.IdPadre</td>
            <td align="center">
                @if (itemVista.Activo)
                {
                    <span class="badge bg-light text-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-light text-danger">No activo</span>
                }
            </td>

            <td align="center">
                <div class="dropdown no-caret">
                    <button class="btn btn-transparent-dark btn-icon dropdown-toggle" id="dropdownPeople6" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i data-feather="more-vertical"></i></button>
                    <div class="dropdown-menu dropdown-menu-end animated--fade-in-up" aria-labelledby="dropdownPeople6">
                        <a class="dropdown-item" href="@Url.Action("Editar", "Vista", new { area = "GestionarAutorizacion", parkey = Security.Common.Encriptador.Instance.EncriptarTexto(itemVista.IdVista.ToString()) })" title="Editar"><i data-feather="edit"></i> &nbsp;Editar</a>
                        <a class="dropdown-item" href="@Url.Action("Detalle", "Vista", new { area = "GestionarAutorizacion", parkey = Security.Common.Encriptador.Instance.EncriptarTexto(itemVista.IdVista.ToString()) })" title="Ver Información"><i data-feather="info"></i> &nbsp;Ver Informacion</a>
                        <a class="dropdown-item" href="javascript:ConfirmarEliminar('')" title="Eliminar"><i data-feather="trash-2"></i> &nbsp;Eliminar</a>
                    </div>
                </div>
            </td>
        </tr>

        }
   
    </tbody>
</table>