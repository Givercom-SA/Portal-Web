@model Web.Principal.Areas.GestionarAutorizacion.Models.PerfilModel
@{
    ViewData["Title"] = "Crear Perfil";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="loader" style="">
    <div class='lds-ripple' id='divLoadTipoEntidad'><div></div><div></div></div>
</div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                        Crear Perfil
                    </h1>
                    <div class="page-header-subtitle">Aquí puedes crear un perfil.</div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container-xl px-4 mt-n10">
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Crear Perfil
            <button id="btnVolver" class="btn btn-sm btn-primary" type="button" onclick="javascript: history.go(-1)">Volver</button>
        </div>

        <div class="card-body">
            <div class="sbp-preview-content">

                <form id="frmPerfil" asp-area="GestionarAutorizacion" asp-controller="Perfil" asp-action="CrearPerfil">


                    <div class="row gx-3 mb-3">

                        <div class="col-md-6">
                            <label asp-for="@Model.Nombre" class="small mb-1"></label>
                            <input asp-for="@Model.Nombre" class="form-control" type="text" placeholder="Ingresar Nombre" />
                            <span asp-validation-for="@Model.Nombre" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="small mb-1">Tipo</label>
                            <select asp-for="@Model.Tipo"
                                    asp-items=" ViewBag.ListTipo"
                                    class="form-select small">
                                <option value="0">Seleccionar</option>
                            </select>
                            <span asp-validation-for="@Model.Tipo" class="text-danger small"></span>
                        </div>
                    </div>



                    <div class="row gx-3 mb-3">

                        <div class="col-md-6">
                            <label asp-for="@Model.Dashboard" class="small mb-1"></label>
                            <input asp-for="@Model.Dashboard" class="form-control" type="text" placeholder="Ingresar dashboard" />
                            <span asp-validation-for="@Model.Dashboard" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="small mb-1">Usuario de Creación</label>
                            <input asp-for="@Model.UsuarioCrea" class="form-control" readonly type="text" />
                        </div>

                    </div>

             

                    <div class="mb-3">
                        <label class="small mb-1">Accesos</label>
                        <fieldset class="border p-2 h-100">
                            <div style="height:250px;" class="overflow-auto small" id="MenuCheckBox">
                                @await Html.PartialAsync("_MenusPorPerfil", ViewBag.Menus as List<ViewModel.Datos.Perfil.MenuPerfilVM>)
                            </div>
                        </fieldset>
                    </div>

                    <div id="MensajeResult" class="small"></div>
                    <hr />
                    <div class="mb-2 text-right">
                        <button class="btn btn-primary" type="submit">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="dialogOk" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Información</h5>

            </div>
            <div class="modal-body">
                <output id="outputMensajeOk"></output> 
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal" onclick="ActualizarForm()">Cerrar y Actualizar</button></div>
        </div>
    </div>
</div>


<div class="modal fade" id="dialogAlerta" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning">Alerta</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensaje"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

<div class="modal fade" id="dialogError" tabindex="-1" data-bs-backdrop="static" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Error</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <output id="outputMensajeError"></output>
            </div>
            <div class="modal-footer"><button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cerrar</button></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>

        $(document).ready(function () {
            $(".loader").fadeOut("slow");
        });

        $("#frmPerfil").submit(function (e) {

     

            e.preventDefault();

            var isValid = $('#frmPerfil').valid();

            if (isValid) {
                var form = $('#frmPerfil')[0];
                var formData = new FormData(form);
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: formData,
                    contentType: false,
                    processData: false,
                    beforeSend: function () {
                        $(".loader").fadeIn("slow");
                    },
                    error: function (jqXHR, textStatus, errorThrown) {

                        $(".loader").fadeOut("slow");

                        $("#dialogError").modal("show");

                        if (jqXHR.status == 401) {
                            $("#outputMensajeError").html("@Utilitario.Constante.SistemaConstante.Error.YouDoNotHaveAccess");
                        } else {
                            $("#outputMensajeError").html("Estimado usuario, ocurrio un error inesperado detalle: " + textStatus + " - " + errorThrown);
                        }

                    },
                    success: function (result) {
                        $(".loader").fadeOut("slow");

                        if (result != null) {
                            if (result.codigo == 0) {
                                 
                                $('#dialogOk').modal('show');
                                $('#outputMensajeOk').html(result.mensaje);

                            } else {
                                $('#dialogAlerta').modal('show');
                                $('#outputMensaje').html(result.mensaje);
                            }
                        } else {
                            $('#dialogError').modal('show');
                            $('#outputMensajeError').html(result.mensaje);
                        }

                    },
                    complete: function (data) {



                    }

                });

            }
        });
        
        
        function ActualizarForm() {
            $('#dialogOk').modal('hide');
            window.location.href = "@Url.Action("ListarPerfiles", "Perfil", new { area= "GestionarAutorizacion" })";
        }

    </script>
}