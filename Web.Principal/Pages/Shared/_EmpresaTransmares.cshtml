@using ViewModel.Datos.UsuarioRegistro
@using ViewModel.Datos.Acceso


@{
    ListarTransGroupEmpresaVM EmpresasSesion = ViewData["EmpresasSesion"] as ListarTransGroupEmpresaVM;
}


<div class="modal fade" id="modalEmpresaTransmares" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" style="" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Empresa Transmares </h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">



                <div class="row">
                    @foreach (var itemEmpresa in EmpresasSesion.Empresa)
                    {
                        <div class="col-lg-4 mb-4">
                            <!-- Knowledge base category card 1-->
                            <a class="card lift lift-sm h-100" href="javascript:SeleccionarEmpresa('@itemEmpresa.Codigo')">
                                <div class="card-body d-flex flex-column justify-content-center text-center">

                                    <img src="~/img/@itemEmpresa.Imagen" title="@itemEmpresa.Codigo" />

                                </div>

                            </a>
                        </div>
                    }

                    </div>


            </div>

        </div>
    </div>
</div>
