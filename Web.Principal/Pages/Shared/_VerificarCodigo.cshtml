@model ViewModel.Datos.SolictudAcceso.VerificarCodigoValidacionParameterVM




<form action="@Url.RouteUrl("solicitaracceso_validarcorreo")" id="frmrVerificarCodigo" onsubmit="fnSubValidarCorreo(this);return false;" method="post">
    <!-- Form Group (email address)-->
    <div class="mb-3">

        <label asp-for="@Model.CodigoVerificacion" class="small mb-1"></label>
        <input asp-for="@Model.CodigoVerificacion" id="txtCodigoVerificacion" class="form-control" type="text" placeholder="Ingrese código de verificación" />

        <span asp-validation-for="@Model.CodigoVerificacion" class="small text-danger"></span>



    </div>
    <!-- Form Group (submit options)-->
    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
        <a class="small"
           href="javascript:fnReenviarCodigo(this)">Reenviar codigo de verificación</a>

    </div>


    <div id="divValidarOutputOk" class="alert alert-success" role="alert" style="display:none">
        <output id="outputValidarOk"></output>
    </div>

    <div id="divValidarOutputError" class="alert alert-danger" role="alert" style="display:none">
        <output id="outputValidarError"></output>
    </div>

    <div id="divValidarOutputAlerta" class="alert alert-warning" role="alert" style="display:none">
        <output id="outputValidarAlerta"></output>
    </div>

    
</form>


